{% extends 'layout.html.twig' %}
{% block content_body %}
{% if page_action=='success' %}
	<div class="alert alert-info">
		Thank you for your message.  We will contact you as soon as possible.
	</div>
{% else %}	
  <form id="contact" method="post" action="agent_contact_us.php?page_action=submit">
  <p>Please use the following form to contact us. Make sure to enter all the required information and press "Send" to send the message.</p>

  <div class="form-group">
    <label class="required-field" for="contact_name">Your Name</label>
    <input type="text" class="form-control contact-form" id="contact_name" name="contact_name" required placeholder="">
  </div>
   <div class="form-group">
    <label for="contact_company">Your Company Name</label>
    <input type="text" class="form-control contact-form" id="contact_company" name="contact_company" placeholder="">
  </div>
   <div class="form-group">
    <label class="required-field" for="contact_emal">Email address</label>
    <input type="email" class="form-control contact-form" id="contact_emal" name="contact_emal" required placeholder="">
  </div>
   <div class="form-group">
    <label for="contact_phone">Your Phone Number</label>
    <input type="text" class="form-control contact-form" id="contact_phone" name="contact_phone" placeholder="">
  </div>
 <div class="form-group">
    <label for="contact_subject">Subject</label>
    <input type="text" name="contact_subject" id="contact_subject" class="form-control contact-form" placeholder="">
  </div>
   <div class="form-group">
    <label class="required-field" for="contact_message">Message</label>
    <textarea class="form-control contact-form" id="contact_message" required name="contact_message"></textarea>
  </div>
  <button type="reset" class="btn btn-default btn-info">Reset</button>
  <button type="submit" class="btn btn-default btn-info">Submit</button>
</form>

{% endif %}

{% endblock content_body %}