{% extends '/order/order_layout.html.twig' %}
{% block order %}

<form class="order_form form-horizontal" name="frm1" action="{{ constant('PAGE_URL') }}?page_action=submit" method="post">

<div class="col-md-8">


{% if error.get_error_status('order_create_confirmation') %}
	<div class="alert alert-danger">
		{{ error.get_error_string('order_create_confirmation')|raw }}
	</div>
{% endif %}


<h4 class="title-panel">Agency Information</h4>
	<div class="panel-library">
		

		<div class="form-group">
			<label for="street_name" class="col-lg-3 control-label">Agent Name:</label>
			<div class="col-lg-9">
				<p class="form-control-static"><b>{{ user.fetch_user_name }}</b></p>
			</div>
		</div>



		<div class="form-group">
			<label for="street_name" class="col-lg-3 control-label">Agent ID:</label>
			<div class="col-lg-9">
				<p class="form-control-static"><b>{{ vars.agent_data['agent_id'] }}</b></p>
			</div>
		</div>




		<div class="form-group">
			<label for="street_name" class="col-lg-3 control-label">Agent Email:</label>
			<div class="col-lg-9">
				<p class="form-control-static">{{ vars.email_data['email_address'] }}</p>
			</div>
		</div>



		<div class="form-group">
			<label for="street_name" class="col-lg-3 control-label">Agency Name:</label>
			<div class="col-lg-9">
				<p class="form-control-static">{{ vars.agent_data['name'] }}</p>
			</div>
		</div>
	
	</div>


<h4 class="title-panel">Address Information</h4>
<div class="panel-library">


			<div class="form-group">
				<label for="street_name" class="col-lg-3 control-label">Activity Requested:</label>
				<div class="col-lg-9">
					<p class="form-control-static"><b>{{ vars.form['order_type_name'] }}</b></p>
				</div>
			</div>


		{% if vars.show_miss_utility > 0 %}

			<div class="form-group">
				<label for="street_name" class="col-lg-3 control-label">Miss Utility Marking Window::</label>
				<div class="col-lg-9">
					<p class="form-control-static">{{ vars.form['miss_utility_start']|date("n/d/Y") }} - {{ vars.form['miss_utility_end']|date("n/d/Y") }}</p>
				</div>
			</div>

		{% endif %}


	
			<div class="form-group">
				<label for="street_name" class="col-lg-3 control-label">Date Range for Order Completion:</label>
				<div class="col-lg-9">
					<p class="form-control-static">{{ vars.form['schedualed_start']|date("n/d/Y") }} - {{ vars.form['schedualed_end']|date("n/d/Y") }}</p>

				</div>
			</div>


		
			<div class="form-group">
				<label for="street_name" class="col-lg-3 control-label">Street Address:</label>
				<div class="col-lg-9">
					<p class="form-control-static">{{ vars.form['house_number'] }} {{ vars.form['street_name'] }}</p>
				</div>
			</div>
		

	
			<div class="form-group">
				<label for="street_name" class="col-lg-3 control-label">City:</label>
				<div class="col-lg-9">
					<p class="form-control-static">{{ vars.form['city'] }}</p>
				</div>
			</div>


		
			<div class="form-group">
				<label for="street_name" class="col-lg-3 control-label">Zip+4:</label>
				<div class="col-lg-9">
					<p class="form-control-static">{{ vars.form['zip4_code'] }}</p>
				</div>
			</div>


	
			<div class="form-group">
				<label for="street_name" class="col-lg-3 control-label">County:</label>
				<div class="col-lg-9">
					<p class="form-control-static">{{ vars.form['county_name'] }}</p>
				</div>
			</div>


	
			<div class="form-group">
				<label for="street_name" class="col-lg-3 control-label">State:</label>
				<div class="col-lg-9">
					<p class="form-control-static">{{ vars.form['state_name'] }}</p>
				</div>
			</div>
	

	
			<div class="form-group">
				<label for="street_name" class="col-lg-3 control-label">Number of Posts:</label>
				<div class="col-lg-9">
					<p class="form-control-static">{{ vars.form['number_of_posts'] }}</p>
				</div>
			</div>
	

	
			<div class="form-group">
				<label for="street_name" class="col-lg-3 control-label">Cross Street Directions:</label>
				<div class="col-lg-9">
					<p class="form-control-static">{{ vars.form['cross_street_directions'] }}</p>
				</div>
			</div>
		

		{% if vars.form['fetch_service_area_window'] > 0 %}
		<div class="alert alert-warning">
			This address has a {{ vars.form['fetch_service_area_window'] }} business day installation window (excludes weekends, Federal Holidays and severe weather days).
		</div>
		{% endif %}
</div>

{% if vars.show_payment > 0 %}

<h4 class="title-panel">Payment Information</h4>
<div class="panel-library">
	
		<div class="form-group">
			<label for="street_name" class="col-lg-3 control-label">Payment Method:</label>
			<div class="col-lg-9">
				<p class="form-control-static">{{ vars.form['payment_type'] }}</p>
			</div>
		</div>

	{% if vars.form.payment_method == constant('BILLING_METHOD_CREDIT') %}
	

		<div class="form-group">
			<label for="street_name" class="col-lg-3 control-label">Name on Card:</label>
			<div class="col-lg-9">
				<p class="form-control-static">{{ vars.form['cc_name'] }}</p>
			</div>
		</div>

	

		<div class="form-group">
			<label for="street_name" class="col-lg-3 control-label">Card Type:</label>
			<div class="col-lg-9">
				<p class="form-control-static">{{ vars.form['cc_type'] }}</p>
			</div>
		</div>

	

		<div class="form-group">
			<label for="street_name" class="col-lg-3 control-label">Card Number:</label>
			<div class="col-lg-9">
				<p class="form-control-static">{{ vars.form['cc_number'] }}</p>
			</div>
		</div>

	

		<div class="form-group">
			<label for="street_name" class="col-lg-3 control-label">Security code:</label>
			<div class="col-lg-9">
				<p class="form-control-static">{{ vars.form['cc_verification_number'] }}</p>
			</div>
		</div>

	

		<div class="form-group">
			<label for="street_name" class="col-lg-3 control-label">Billing Address:</label>
			<div class="col-lg-9">
				<p class="form-control-static">{{ vars.form['cc_billing_street'] }} {{ vars.form['cc_billing_city'] }} {{ vars.form['cc_billing_zip'] }}</p>
			</div>
		</div>

	
	{% endif %}
	
	{% if constant('SHOW_PROMO_CODE_AREA') == true %}

			<div class="form-group">
				<label for="street_name" class="col-lg-3 control-label">Promotional Code:</label>
				<div class="col-lg-9">
					<p class="form-control-static">{{ vars.form['promo_string'] }}</p>
				</div>
			</div>
		
	{% endif %}

</div>
	
{% endif %}

<h4 class="title-panel">Extra Information and Optional Extras</h4>
<div class="panel-library">

{% if vars.order_type == constant('ORDER_TYPE_SERVICE') %}

			<div class="form-group">
				<label for="street_name" class="col-lg-3 control-label">Reason:</label>
				<div class="col-lg-9">
					<p class="form-control-static">{{ vars.form.sc['name'] }}</p>
				</div>
			</div>

	{% if vars.sc_reason==1 %}
	
	<div class="form-group">
				<label for="street_name" class="col-lg-3 control-label">Details:</label>
				<div class="col-lg-9">
					<p class="form-control-static">Install {{ vars.form.sc['install_equipment_name'] }}</p>
					<p class="form-control-static">Remove {{ vars.form.sc['remove_equipment_name'] }}</p>
				</div>
			</div>
			
		{% elseif vars.sc_reason==3 %}		
	<div class="form-group">
				<label for="street_name" class="col-lg-3 control-label">Details:</label>
				<div class="col-lg-9">
					<p class="form-control-static">Install {{ vars.form.sc['agent_equipment_name'] }}</p>
				</div>
			</div>		

	{% elseif vars.sc_reason==2 %}
	
	<div class="form-group">
				<label for="street_name" class="col-lg-3 control-label">Details:</label>
				<div class="col-lg-9">
					{% for equipment in vars.form.sc['equipment_array'] %}
						<p>{{ equipment['name'] }}</p>
						{% for optional in equipment['equipment'] %}
							<p><span class="fa fa-arrow-right"></span> {{ optional }}</p>
						{% endfor %}
					{% endfor %}
				</div>
			</div>
			
	{% elseif vars.sc_reason==6 %}
	
	<div class="form-group">
				<label for="street_name" class="col-lg-3 control-label">Details:</label>
				<div class="col-lg-9">
					{% for equipment in vars.form.sc['equipment_array'] %}
						<p>{{ equipment['name'] }}</p>
						{% for optional in equipment['equipment'] %}
							<p><span class="fa fa-arrow-right"></span> {{ optional }}</p>
						{% endfor %}
					{% endfor %}
				</div>
			</div>		
	
	{% endif %}

			<div class="form-group">
				<label for="street_name" class="col-lg-3 control-label">Special Instructions:</label>
				<div class="col-lg-9">
					<p class="form-control-static">{{ vars.form['special_instructions'] }}</p>
				</div>
			</div>


{% else %}	
	

			<div class="form-group">
				<label for="street_name" class="col-lg-3 control-label">Special Instructions:</label>
				<div class="col-lg-9">
					<p class="form-control-static">{{ vars.form['special_instructions'] }}</p>
				</div>
			</div>

		

			<div class="form-group">
				<label for="street_name" class="col-lg-3 control-label">Miss Utility:</label>
				<div class="col-lg-9">
					<p class="form-control-static">{{ vars.form['miss_utility_string'] }}</p>
				</div>
			</div>


			<div class="form-group">
				<label for="street_name" class="col-lg-3 control-label">Equipment:</label>
				<div class="col-lg-9">
					{% for equipment in vars.form['equipment_array'] %}
						<p>{{ equipment['name'] }}</p>
						{% for optional in equipment['equipment'] %}
							<p><span class="fa fa-arrow-right"></span> {{ optional }}</p>
						{% endfor %}
					{% endfor %}
				</div>
			</div>

	
{% endif %}

</div>


<h4 class="title-panel">Order Totals</h4>
<div class="panel-library">

	{% if order.base_cost > 0 %}

		<div class="form-group">
			<label class="col-lg-3 control-label">Base Cost:</label>
			<div class="col-lg-9">
				<p class="form-control-static">${{ order.base_cost|number_format(2)}}</p>
			</div>
		</div>

	{% endif %}



	{% if order.extended_cost > 0 %}

		<div class="form-group">
			<label class="col-lg-3 control-label">Extended Cost:</label>
			<div class="col-lg-9">
				<p class="form-control-static">${{ order.extended_cost|number_format(2)}}</p>
			</div>
		</div>

	{% endif %}

	{% if order.equipment_cost > 0 %}

		<div class="form-group">
			<label class="col-lg-3 control-label">Equipment Cost:</label>
			<div class="col-lg-9">
				<p class="form-control-static">${{ order.equipment_cost|number_format(2)}}</p>
			</div>
		</div>

	{% endif %}


	{% if order.extra_cost > 0 %}

		<div class="form-group">
			<label class="col-lg-3 control-label">Extra Cost:</label>
			<div class="col-lg-9">
				<p class="form-control-static">${{ order.extra_cost|number_format(2)}} ({{ vars.form['extra_cost_string'] }})</p>
			</div>
		</div>

	{% endif %}


	{% if order.deposit_cost > 0 %}

		<div class="form-group">
			<label class="col-lg-3 control-label">Deposit Cost:</label>
			<div class="col-lg-9">
				<p class="form-control-static">${{ order.deposit_cost|number_format(2)}} (This will be refunded when the signpost is successfully removed)</p>
			</div>
		</div>

	{% endif %}


	{% if order.discount_cost > 0 %}

		<div class="form-group">
			<label class="col-lg-3 control-label">Adjustment:</label>
			<div class="col-lg-9">
				<p class="form-control-static">${{ order.discount_cost|number_format(2)}} (This will be refunded when the signpost is successfully removed)</p>
			</div>
		</div>

	{% endif %}

	{% if order.credit > 0 %}

		<div class="form-group">
			<label class="col-lg-3 control-label">Credit:</label>
			<div class="col-lg-9">
				<p class="form-control-static">$-{{ order.credit|number_format(2)}}</p>
			</div>
		</div>

	{% endif %}

	{% if vars.form['order_total'] > 0 %}

		<div class="form-group">
			<label class="col-lg-3 control-label">Total Cost:</label>
			<div class="col-lg-9">
				<p class="form-control-static">${{ vars.form['order_total']|number_format(2)}}</p>
			</div>
		</div>


	{% else %}


		<div class="form-group">
			<label class="col-lg-3 control-label">Total Cost:</label>
			<div class="col-lg-9">
				<p class="form-control-static">There is no charge for this order.</p>
			</div>
		</div>
	

	{% endif %}
	
</div>

{% if vars['deferred'] is not null %}
       {{ vars['deferred']|raw }}
{% endif %}

{% if (vars.form.payment_method == constant('BILLING_METHOD_CREDIT')) and (vars.form.order_total+vars.form.deferred_total > 0) %}

	<div class="alert alert-warning">
		When you press the "Process Order" button your credit card will be charged.
	</div>

{% endif %}

	<p><input type="checkbox" id="tos" required name="tos" value="1" /> I have read and accept the {{ constant('BUSINESS_NAME') }} Terms of Service <a target="_blank" href="{{ constant('FILENAME_TERMS_OF_SERVICE') }}">(Click here to View)</a></p>

</div>
{% endblock order %}

{% block next_button %}
	
	<input type="hidden" name="submit_string_y" id="submit_string_y" value="1">
	<button name="submit_string" type="submit" style="float:right" class="btn btn-info">Process Order</button>

{% endblock next_button %}	